apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: disk-fill
  labels:
    chaosUID: {{ chaos_uid }}
spec:
  selector:
    matchLabels:
      app: disk-fill
      chaosUID: {{ chaos_uid }}
  template:
    metadata:
      labels:
        app: disk-fill
        chaosUID: {{ chaos_uid }}
      name: disk-fill
    spec:
      containers:
      - image: alpine
        args:
        - sleep
        - "10000"
        imagePullPolicy: Always
        name: disk-fill
        volumeMounts:
          - name: udev
            mountPath: /diskfill
            mountPropagation: HostToContainer
        securityContext:
          privileged: true
      volumes:
        - name: udev
          hostPath:
            path: /var/lib/docker/containers
