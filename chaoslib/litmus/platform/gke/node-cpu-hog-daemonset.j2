apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: cpu-hog
  engineUID: {{ engineUid }}
spec:
  selector:
    matchLabels:
      app: cpu-hog
      engineUID: {{ engineUid }}
  template:
    metadata:
      labels:
        app: cpu-hog
      name: cpu-hog
    spec:
      containers:
      - image: litmuschaos/cpu:latest
        imagePullPolicy: Always
        name: cpu-hog
        command: ["/bin/bash"]
        args: ["-c", "sleep 10000"]