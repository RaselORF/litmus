apiVersion: apps/v1
kind: Job
metadata:
  name: node-cpu-hog
  labels: 
    chaosUID: {{ chaos_uid }}
spec:
  template:
    metadata:
      labels:
        app: cpu-hog
        chaosUID: {{ chaos_uid }}
    spec:
      containers:
      - image: litmuschaos/cpu:latest
        imagePullPolicy: Always
        name: cpu-hog
        command: ["/bin/bash"]
        args: ["-c", "sleep 10000"]
